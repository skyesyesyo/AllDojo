<div>
	<h1 style="display: inline-block;"><%= @dojo.branch %></h1>
	<a href="/dojos/<%= @dojo.id %>/edit" style="display: inline-block;">Edit</a>
</div>

<address>
	<p>Address: <%= @dojo.street %></p>
	<p>City: <%= @dojo.city %> State: <%= @dojo.state %></p>
</address>

<h2>Student roster</h2>

<table style="border: 1px solid black;">
	<tr>
		<th>First Name</th>
		<th>Last Name</th>
		<th>Email</th>
		<th>Action</th>
	</tr>
	<% @students.each do |student| %>
		<tr>
			<td><%= student.first_name %></td>
			<td><%= student.last_name %></td>
			<td><%= student.email %></td>
			<td>
				<a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="DELETE" data-confirm="Are you sure?">Destory</a>
			</td>
		</tr>
	<% end %>
</table>

<a href="/">Home</a> |
<a href="/dojos/<%= @dojo.id %>/students/new">Add Student</a>
