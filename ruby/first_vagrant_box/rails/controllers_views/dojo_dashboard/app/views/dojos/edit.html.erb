<% if flash[:errors] %>
	<% flash[:erros].each do |e| %>
		<p style="color:red;"><%= e %></p>
	<%end%>
<% end %>

<form method="POST" action="/dojos/<%= @dojo.id %>">
	<input type="hidden" name="_method" value="PUT">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

	<fieldset>
		<legend>Edit</legend>
		<p>Branch: <input type="text" name="dojo[branch]" value="<%= @dojo.branch %>"></p>
		<p>Street: <input type="text" name="dojo[street]" value="<%= @dojo.street %>"></p>
		<p>City: <input type="text" name="dojo[city]" value="<%= @dojo.city %>"></p>
		<p>State: <input type="text" name="dojo[state]" value="<%= @dojo.state %>"></p>
	</fieldset>
	<input type="submit" name="ADD Dojo">
	
</form>

<a href="/">Home</a>
<a href="/dojos/<%= @dojo.id %>">Show</a>