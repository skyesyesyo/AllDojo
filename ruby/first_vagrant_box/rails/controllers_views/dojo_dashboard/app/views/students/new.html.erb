<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p style="color:red;"><%= e %></p>
	<% end %>
<% end %>

<h1>New Student</h1>

<form method="POST" action="/dojos/<%= @dojo.id %>/students">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<fieldset>
		<p>First Name: <input type="text" name="student[first_name"></p>
		<p>Last Name: <input type="text" name="student[last_name"></p>
		<p>Email Address: <input type="text" name="student[email"></p>
		
		<p>Dojo: <select name="student[dojo_id]">
			<% @all_dojos.each do |d| %>
				<% if d.id == @dojo.id %>
					<option selected value="<%= d.id %>"><%= d.branch %></option>
				<% else %>
					<option value="<%= d.branch %>"><%= d.branch %></option>
				<% end %>
			<% end %>
		</select></p>
	</fieldset>
	<p><input type="submit" name="" value="Create"></p>
</form>

<a href="/">Home</a> |
<a href="/dojos/<%= @dojo.id %>/"><%= @dojo.branch %></a>