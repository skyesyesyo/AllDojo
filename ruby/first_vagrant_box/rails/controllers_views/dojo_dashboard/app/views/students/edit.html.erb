<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<form action="/dojos/<%= @dojo.id %>/students/<%= @student.id %>" method="POST">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="_method" value="PUT">

	<fieldset>
		<legend>Edit info</legend>
		<p>First name: <input type="text" name="student[first_name]" value="<%= @student.first_name %>"></p>
		<p>Last name: <input type="text" name="student[last_name]" value="<%= @student.last_name %>"></p>
		<p>Email: <input type="text" name="student[email]" value="<%= @student.email %>"></p>
		<p>
			Dojo: <select name="student[dojo_id]">
				<% @all_dojos.each do |d| %>
					<% if d.id == @student.id %>
						<option selected value="<%= d.id %>"><%= d.branch %></option>
					<% else %>
						<option value="<%= d.id %>"><%= d.branch %></option>
					<% end %>
				<% end %>
			</select>
		</p>
	</fieldset>
	<p><input type="submit" name="update" value="Update!"></p>
</form>

<a href="/">Home</a> | 
<a href="/dojos/<%= @dojo.id %>"><%= @student.first_name %> <%= @student.last_name %></a>